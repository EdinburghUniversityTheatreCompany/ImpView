<div class="control-group" data-shortcut="<%= shortcut %>">
  <h3 class="group-header">Video</h3>

  <form class="form-inline">
    <input id="video-input" type="text" />
    <a id="controls-show-hide-video" class="btn">Show Video</a>
    <a id="controls-fade-video" class="btn">Fade In Video</a>
    <a id="controls-play-video" class="btn">Play Video</a>
    <a id="controls-restart-video" class="btn">Restart Video</a>
    <span id="controls-video-loader"></span>

    <br />
    <input id="video-file" type="file" />
  </form>

  <p>
    <a id="controls-show-play-video"    data-shortcut="q" class="btn">Show and Play Video</a>
    <a id="controls-hide-restart-video" data-shortcut="w" class="btn">Hide and Restart Video</a>
  </p>

  <p class="preset-videos">
    <a data-shortcut="a"><video src="content/Vortex.mp4"       /></a>
    <a data-shortcut="s"><video src="content/NewsNight.mp4"    /></a>
    <a data-shortcut="d"><video src="content/QuestionTime.mp4" /></a>
    <a data-shortcut="f"><video src="content/bbcnews.webm"     /></a>
    <a data-shortcut="g"><video src="content/itvnews.webm"     /></a>
  </p>
</div>