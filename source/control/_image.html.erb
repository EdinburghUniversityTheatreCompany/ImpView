<div class="control-group" data-shortcut="<%= shortcut %>">
  <h3 class="group-header">Image</h3>

  <form class="form-inline">
    <input id="image-input" type="text" />
    <input id="image-file" type="file" />
    <span id="controls-image-loader"></span>
  </form>

  <p>
    <a data-shortcut="q" id="controls-show-hide-image" class="btn">Show Image</a>
    <a data-shortcut="w" id="controls-fade-image"      class="btn">Fade In Image</a>
  </p>

  <p class="preset-images">
    <a data-shortcut="a"><img src="content/beach.jpg"            /></a>
    <a data-shortcut="s"><img src="content/CustomsEndowment.jpg" /></a>
    <a data-shortcut="d"><img src="content/Daleks.png"           /></a>
  </p>
</div>