<div class="control-group" data-shortcut="<%= shortcut %>">
  <h3 class="group-header">Image</h3>

  <form class="form-inline">
    <input id="image-input" type="text" />
    <a id="controls-show-hide-image" class="btn">Show Image</a>
    <a id="controls-fade-image" class="btn">Fade In Image</a>
    <span id="controls-image-loader"></span>

    <br />
    <input id="image-file" type="file" />
  </form>

  <p class="preset-images">
    <img data-shortcut="q" src="content/beach.jpg" />
    <img data-shortcut="w" src="content/CustomsEndowment.jpg" />
    <img data-shortcut="e" src="content/Daleks.png" />
  </p>
</div>